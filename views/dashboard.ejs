<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="css/board.css">
        <link href="css/board.min.css" rel="stylesheet">
    </head>
    <body>
       <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="/" class="logo">Interview Tracker</a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        
                        <ul class="nav">
                            <li class="submenu">
                                <a href="javascript:;"><img class="img-xs rounded-circle" src="data:image/<%=user.image.contentType%>;base64,<%=user.image.data.toString('base64')%>" alt="Profile image"></a>
                                <ul>
                                    <p><strong><%= user.username %></strong></p>
                                    <li><a href="profile">Profile</a></li>
                                    <li><a href="logout">Log Out</a></li>
                                </ul>
                            </li>
                        </ul>
                            
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
       </header>

       <div class="page-wrapper">
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <!-- Row -->
            <div class="row">
                <!-- Column -->
                <div class="col-lg-4 col-xlg-3 col-md-5">
                    <div class="card">
                        <div class="card-body profile-card">
                            <center class="m-t-30"><img src="data:image/<%=user.image.contentType%>;base64,<%=user.image.data.toString('base64')%>"
                                    class="rounded-circle" width="150" />
                                <h4 class="card-title m-t-10"><strong><%= user.username %></strong></h4>
                            </center>
                        </div>
                    </div>
                </div>
                <!-- Column -->
                <!-- Column -->
                <div class="col-lg-8 col-xlg-9 col-md-7">
                    <div class="card">
                        <div class="card-body">
                            <form method="POST" class="form-horizontal form-material" action="profile/<%= user._id %>" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label class="col-md-12 mb-0">Full Name</label>
                                    <div class="col-md-12">
                                        <p><strong><%= user.username %></strong></p>
                                    </div>
                                </div>
                                <div class="name error"></div>
                                <div class="form-group">
                                    <label for="example-email" class="col-md-12">Email</label>
                                    <div class="col-md-12">
                                        <p><strong><%= user.email %></strong></p>
                                    </div>
                                </div>
                                <div class="email error"></div>
                                <div class="form-group">
                                    <label for="example-email" class="col-md-12">Profile Image(png only)</label>
                                    <div class="col-md-12">
                                        <input type="file" name="image" class="form-control pl-0 form-control-line" id="image" value="">
                                    </div>
                                </div>
                                
                                
                                <div class="form-group">
                                    <div class="col-sm-12 d-flex">
                                        <button type="submit" class="btn btn-success mx-auto mx-md-0 text-white">Update
                                            Profile Picture</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Column -->
            </div>
            
        </div>
        
        
    </div>


    </section>

                    


       <!-- jQuery -->
    <script src="js/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="js/owl-carousel.js"></script>
    <script src="js/scrollreveal.min.js"></script>
    <script src="js/waypoints.min.js"></script>
    <script src="js/jquery.counterup.min.js"></script>
    <script src="js/imgfix.min.js"></script> 
    
    <!-- Global Init -->
    <script src="js/custom.js"></script>

    </body>
</html>

