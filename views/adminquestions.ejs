    <script>
        const form = document.querySelector('form');
        form.addEventListener('submit', async(e)=> {
            e.preventDefault();

            const name =form.question.value;
            const linkto = form.linkto.value;
            const topicName = form.topic.value;
            const visible=form.visible.checked  ? 1 : 0;
            console.log(visible);
            

            try{
                const res = await fetch('/addquestion', { 
                method: 'POST', 
                body: JSON.stringify({ name,linkto,topicName,visible }),
                headers: {'Content-Type': 'application/json'}
                    });
                    const data= await res.status;
                    if(data ==200){
                        location.assign('/adminquestions');
                    }
                }
                    catch (err) {
                        console.log(err);
    }
                });
    </script>






